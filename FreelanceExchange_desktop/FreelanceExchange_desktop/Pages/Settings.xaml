<Page x:Class="FreelanceExchange_desktop.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FreelanceExchange_desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Width="100" Margin="30" Content="Выйти" Command="{Binding ExitCommand}"/>
            <Button Width="100" Margin="0" Content="Поменять тему" Command="{Binding ChangeThemeCommand}"/>
        </StackPanel>
    </Grid>
</Page>
