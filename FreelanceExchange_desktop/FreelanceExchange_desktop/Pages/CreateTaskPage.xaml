<Page x:Class="FreelanceExchange_desktop.Pages.CreateTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FreelanceExchange_desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateTaskPage">

    <Grid>
        <Border Width="auto"
                VerticalAlignment="Top"
                Margin="10,10,10,0"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                >

            <StackPanel>

                <TextBlock Text="Создание задания"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Название:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding NewTask.Title, Mode=TwoWay}"
                         Height="30"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Описание:"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding NewTask.Description , Mode=TwoWay}"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Бюджет (₽):"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4"/>
                <TextBox Text="{Binding NewTask.Budget , Mode=TwoWay}"
                         Height="30"
                         Margin="0,0,0,12"/>

                <TextBlock Text="Изображение:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <Button Content="Загрузить изображение"
            Command="{Binding UploadImageCommand}"
            Height="30"
            Width="160"
            Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding NewTask.Image}" VerticalAlignment="Center" Foreground="Gray"/>
                </StackPanel>


                <Button Content="Создать задание"
                        Command="{Binding CreateTaskCommand }"
                        Width="200"
                        Height="40"
                        HorizontalAlignment="Center"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
